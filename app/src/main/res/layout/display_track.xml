<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorAccent"

    android:layout_height="170px">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:id="@+id/trackid_display" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:id="@+id/tostation_display"
        android:layout_alignBaseline="@+id/trackid_display"
        android:layout_alignBottom="@+id/trackid_display"
        android:layout_toRightOf="@+id/trackid_display"
        android:layout_toEndOf="@+id/trackid_display" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromstation_display"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_alignBaseline="@+id/tostation_display"
        android:layout_alignBottom="@+id/tostation_display"
        android:layout_toRightOf="@+id/tostation_display"
        android:layout_toEndOf="@+id/tostation_display" />
</RelativeLayout>