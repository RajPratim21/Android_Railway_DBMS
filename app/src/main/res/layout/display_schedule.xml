<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorAccent"

    android:layout_height="120px">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/station_id_display" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/station_id_display"
        android:layout_centerHorizontal="true"
        android:id="@+id/train_id_display" />

    <TextView
        android:text="10:00 Am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/train_id_display"
        android:layout_toRightOf="@+id/train_id_display"
        android:layout_toEndOf="@+id/train_id_display"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:id="@+id/textView22" />
</RelativeLayout>